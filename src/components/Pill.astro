---
interface Props {
	size?: 'sm' | 'md';
}

const { size } = Astro.props;
---

<div class={`pill ${size != null ? size : 'md'}`}><slot /></div>

<style>
	.pill {
		display: flex;
		color: var(--accent-text-over);
		border: 1px solid var(--pill-color);
		background-color: var(--pill-color);
		border-radius: 999rem;
		line-height: 1.35;
		white-space: nowrap;
	}

	.sm {
		padding: 0.3rem 0.6rem;
		font-size: 1rem;
	}

	.md {
		padding: 0.5rem 1rem;
		font-size: 1.05rem;
		gap: 0.5rem;
	}

	@media (min-width: 50em) {
		.sm {
			font-size: 1.2rem;
			padding: 0.5rem 1rem; 
		}

		.md {
			font-size: var(--text-md);
		}
	}
</style>
