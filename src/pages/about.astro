---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Container.astro';
import Pill from '../components/Pill.astro';

const skills = [
	"Communication",
	"Creativity",
	"Software Development",
	"Web Development",
	"Problem Solving",
	"Flexibility",
	"Critical Thinking",
	"Time Management",
	"Teamwork",
	"Mathematical Reasoning"
].sort((a, b) => a.localeCompare(b, "en", {sensitivity: 'base'}));
---

<BaseLayout title="About Me" description="Who am I? Joaquín Badillo">
	<main class="wrapper about">
		<Hero
			title="About Me"
			tagline="Thanks for stopping by! I'm a software developer and student from Mexico that tries to make data and technology more accessible to everyone."
		>
			<img
				src="/assets/at-work.jpg"
				alt="Joaquín Badillo programming"
			/>
		</Hero>
		
		<section>
			<h2 class="section-title">Background</h2>
			<div class="content">
				<p>
					I have always been of the curious kind. I love to learn new things and 
					take on challenges, which is why I started programming at a younger age.
				</p>
				<p>
					As of now, I am a student at Tecnológico de Monterrey, where I am pursuing a
					B.S. in Computer Science and Technology. I am also working as a Software Engineer
					Intern at my college, where I collaborate with a team of urbanism researchers to create
					interactive data visualizations and web applications.
				</p>
			</div>
		</section>
		<section>
			<h2 class="section-title">Education</h2>
			<div class="content">
				<header>
					<h3>B.S. in Computer Science and Technology</h3>
					<div class="inline-wrapper">
						<strong>Tecnológico de Monterrey</strong>
						<span class="date">Graduation Date: June 2025</span>
					</div>
				</header>

				<details open>
					<summary>Relevant Courses</summary>
					<ul>
						<li>Integration of Computer Security in Networks and Software Systems</li>
						<li>Analysis and Design of Advanced Algorithms</li>
						<li>Software Construction and Decision Making</li>
						<li>Implementation of Computational Methods</li>
						<li>Device Interconnection (Computer Networks)</li>
						<li>Programming of Data Structures and Fundamental Algorithms</li>
						<li>Implementation of the Internet of Things</li>
						<li>Analysis of Software Requirements</li>
						<li>Object-Oriented Programming</li>
					</ul>
				</details>
				
				

				<header>
					<h3>IB Diploma Programme</h3>
					<div class="inline-wrapper">
						<strong>Tecnológico de Monterrey</strong>
						<span class="date">May 2021</span>
					</div>
				</header>

				<details open>
					<summary>Relevant Coursework</summary>
				
					<ul>
						<li>Mathematics: Analysis and Approaches (SL)</li>
							<ul>
								<li> Approximating Trascendental Functions using Arithmetic </li>
								<li> Researching the applications of Differential Geometry in Aviation (Geodesics) </li>
							</ul>
					</ul>
				</details>
			</div>
		</section>
		<section>
			<h2 class="section-title">Skills</h2>
			<div class="content">
				<Grid>
					{
						skills.map((skill) => (
							<li><Pill>{skill}</Pill></li>
						))
					}
				</Grid>
			</div>
		</section>
	</main>
</BaseLayout>

<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
		color: var(--gray-0);
	}

	.content p {
		margin-top: 1.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.8rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	details {
		margin-bottom: 1.5rem;
	}

	summary {
		font-size: 1.3rem;
		font-weight: 600;
	}

	summary:hover {
		cursor: pointer;
	}

	section .content {
		color: var(--gray-200);
	}

	section .content h4 {
		color: var(--gray-0);
	}

	.inline-wrapper {
		display: flex;
		flex-direction: row;
		width: 90%;
		gap: 0.5rem;
		justify-content: space-between;
		flex-wrap: wrap;
	}

	.date {
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-3xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
		margin-bottom: 1.2rem;
	}

	.content header {
		padding: 0.5rem 0;
		margin-bottom: 0.5rem;
		font-size: 1.1rem;
		color: var(--gray-100)
	}

	.content h3 {
		font-size: 2rem;
		margin-bottom: 0.5rem;
		color: var(--gray-0);
	}

	.content header strong {
		font-size: 1.2rem;
	}

	.content ul {
		font-size: 1.2rem;
		padding-left: 1.8rem;
	}

	.content li {
		padding: 0.25rem 0;
	}

	.content {
		font-size: 1.2rem;
	}

	@media (min-width: 50em) {
		.content header {
			font-size: 1.3rem;
		}

		.content header strong {
			font-size: 1.45rem;
		}

		.content {
			font-size: 1.25rem;
		}

		.content ul {
			font-size: 1.18rem;
		}

		.content h4 {
			font-size: 1.25rem;
		}

		.section-title {
			font-size: var(--text-2xl);
		}
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
			padding: 0.5rem;
		}
	}
</style>
